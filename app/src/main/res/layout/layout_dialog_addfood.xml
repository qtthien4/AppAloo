<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_conner_16"
    android:orientation="vertical">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_red_corner_bottom_left_bottom_right16"
        android:gravity="center"
        android:padding="12dp"
        android:text="Thêm món ăn"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/edit_addfood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_white_conner_10_border_gray"
            android:hint="Món ăn..."
            android:padding="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_huy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_gray_conner_10"
                android:text="Hủy bỏ"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_dongy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_red_conner_10"
                android:backgroundTint="#FF0000"
                android:text="Đồng ý"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>