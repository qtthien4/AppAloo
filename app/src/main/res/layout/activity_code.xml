<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".xulydangnhap.CodeActivity">

    <EditText
        android:id="@+id/mytoken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginTop="152dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/yourtoken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/mytoken"
        app:layout_constraintTop_toBottomOf="@+id/mytoken" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="30dp"
        android:text="My Token"
        app:layout_constraintBottom_toTopOf="@+id/mytoken"
        app:layout_constraintStart_toStartOf="@+id/mytoken" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="22dp"
        android:text="Your Token"
        app:layout_constraintBottom_toTopOf="@+id/yourtoken"
        app:layout_constraintStart_toStartOf="@+id/yourtoken" />

    <Button
        android:id="@+id/comfirmtoken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="44dp"
        android:text="Xác Nhận"
        app:layout_constraintEnd_toEndOf="@+id/yourtoken"
        app:layout_constraintTop_toBottomOf="@+id/yourtoken" />
</androidx.constraintlayout.widget.ConstraintLayout>